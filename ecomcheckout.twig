{% extends "layout.twig" %}

{% block content %}

<header class="bk-header">
    <div class="container">
        <div class="grid">
            <div class="col-30">
                {{widget('companyname', 'companyname-header', {"business": "profile"})|raw}}
            </div><!--end col-30-->
            <nav class="col-60">
                {{widget('extendednavigation', 'desktopnavigation', {})|raw}}
            </nav><!--end col-60-->
